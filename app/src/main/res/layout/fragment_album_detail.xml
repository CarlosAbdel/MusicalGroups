<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_album"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_dimens_20"
        android:layout_marginEnd="@dimen/common_dimens_10"
        android:scaleType="fitCenter"
        tools:src="@drawable/src_ghost_stories" />

    <TextView
        android:id="@+id/name_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimens_20"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="@dimen/common_dimens_32"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_dimens_text_18"
        tools:text="Ghost Stories" />

    <TextView
        android:id="@+id/txt_name_group_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimens_20"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingStart="@dimen/common_dimens_32"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_dimens_text_18"
        tools:text="Coldplay" />

    <TextView
        android:id="@+id/name_discography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimens_20"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingStart="@dimen/common_dimens_32"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_dimens_text_18"
        tools:text="Universal Music" />

    <TextView
        android:id="@+id/date_publication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimens_20"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingStart="@dimen/common_dimens_32"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_dimens_text_18"
        tools:text="2018" />

</LinearLayout>