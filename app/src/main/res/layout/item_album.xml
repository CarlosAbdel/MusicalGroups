<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_album"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_dimens_120"
    android:layout_margin="@dimen/common_dimens_8"
    android:clickable="true"
    android:focusable="true"
    android:onClick="onAlbumClick"
    app:cardCornerRadius="@dimen/common_dimens_10"
    app:cardElevation="@dimen/common_dimens_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_album_icon"
            android:layout_width="@dimen/common_dimens_100"
            android:layout_height="@dimen/common_dimens_100"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/common_dimens_10"
            android:scaleType="fitCenter"
            tools:src="@drawable/src_ghost_stories" />

        <TextView
            android:id="@+id/txt_name_album"
            android:layout_width="@dimen/common_dimens_180"
            android:layout_height="@dimen/common_dimens_64"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_dimens_text_14"
            tools:text="Ghost Stories" />
    </LinearLayout>
</androidx.cardview.widget.CardView>